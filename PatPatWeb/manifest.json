{
  "name": "PatPat",
  "description": "Pat Images on the websites!",
  "version": "0.9",
  "author": "savelijln0@gmail.com",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "contextMenus", "menus"],
  "icons": {
	"16": "/etc/icon.nano.png",
	"64": "/etc/icon.chrome.x64.png",
	"128": "/etc/icon.chrome.png"
  },
  "content_scripts": [
    {
		"css": ["code/css/patStyles.css"],
		"js": ["code/LightTools.js", "code/rules.js", "code/tools.js", "code/main.js", "code/page_init.js", "code/SuperFeatures.js", "code/stats.js"],
        "matches": [
			"<all_urls>",
			"file:///*",
			"http://localhost/*",
			"http://127.0.0.1/*"
		],
		"run_at": "document_end"
    }
  ], 
  "background": {
    "service_worker": "background/background.js",
	"scripts": ["background/background.js"]
  },
  "web_accessible_resources": [
	  {
		"resources": [
			"etc/packs.json",
			
			"/etc/PatPat.Classic/sequence/pat0.png",
			"/etc/PatPat.Classic/sequence/pat1.png",
			"/etc/PatPat.Classic/sequence/pat2.png",
			"/etc/PatPat.Classic/sequence/pat3.png",
			"/etc/PatPat.Classic/sequence/pat4.png",
			"/etc/PatPat.Classic/sounds/pat0.ogg",
			"/etc/PatPat.Classic/sounds/pat1.ogg",
			"/etc/PatPat.Classic/sounds/pat2.ogg",
			
			"/etc/PatPat.Bonk/sequence/bonk_animation0.png",
			"/etc/PatPat.Bonk/sequence/bonk_animation1.png",
			"/etc/PatPat.Bonk/sequence/bonk_animation2.png",
			"/etc/PatPat.Bonk/sequence/bonk_animation3.png",
			"/etc/PatPat.Bonk/sequence/bonk_animation4.png",
			"/etc/PatPat.Bonk/sequence/bonk_animation5.png",
			"/etc/PatPat.Bonk/sounds/bonk.ogg",
			
			"/etc/PatPat.Piston/sequence/piston0.png",
			"/etc/PatPat.Piston/sequence/piston1.png",
			"/etc/PatPat.Piston/sequence/piston2.png",
			"/etc/PatPat.Piston/sequence/piston3.png",
			"/etc/PatPat.Piston/sequence/piston4.png",
			"/etc/PatPat.Piston/sounds/piston_sound.ogg"
		],
		"matches": [
			"<all_urls>",
			"file:///*",
			"http://localhost/*",
			"http://127.0.0.1/*"
		]
	  }
  ],
  "browser_specific_settings": {
    "gecko": {
	    "id": "patpat.savelijln0@gmail.com",
        "strict_min_version": "140.0",
	    "data_collection_permissions": {
		    "required": ["websiteActivity"]
	    }
    }
  },
  "action": {
    "default_popup": "popup/settings.html",
    "default_icon" : "etc/icon.png"
  },
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*",
    "http://*/*"
  ]
}